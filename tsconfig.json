{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./types",
		"sourceMap": true,
		"experimentalDecorators": false,
		"module": "es6",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"outDir": "./dist",
		"target": "es5"
	},
	"include": [
		"src/**/*"
	]
}
